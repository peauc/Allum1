#include "allum1.h"

int	decal_max(t_allum *allum)
{
  int	i;
  int	max;

  i = -1;
  while (allum->tab[++i] != -1)
    {
      max = allum->tab[i];
    }
  return (max = max / 2);
}

void	showallum(t_allum *allum)
{
  int	i;
  int	allumin;
  int	decal;
  int	count;

  count = 0;
  decal = allum->max;
  i = -1;
  printf("decal = %d\n", allum->max);
  while (allum->tab[++i] != -1)
    {
      allumin = 0;
      while (count++ != decal)
	write(1, " ", 1);
      decal--;
      count = 0;
      while (allumin++ < allum->tab[i])
	write(1, "|", 1);
      write(1, "\n", 1);
    }
}
